<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".MainActivity">
    <ImageView
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:elevation="8dp"
        android:src="@drawable/ic_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:padding="16dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginLeft="16dp"
            android:text="PC 로그인"
            android:gravity="left"
            android:textSize="16sp"
            android:textColor="#0C3991"
            android:layout_width="match_parent"
            android:layout_height="24dp"/>
        <LinearLayout
            android:gravity="bottom"
            android:padding="16dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/button_pc_1"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/ic_button_gradient"
                android:text="관리자 로그인"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="56dp"/>
            <View
                android:layout_width="16dp"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/button_pc_2"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/ic_button_gradient"
                android:text="처리자 로그인"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="56dp"/>
            <View
                android:layout_width="16dp"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/button_pc_3"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/ic_button_gradient"
                android:text="선생님 로그인"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="56dp"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="16dp"
            android:text="모바일 로그인"
            android:gravity="left"
            android:textSize="16sp"
            android:textColor="#0C3991"
            android:layout_width="match_parent"
            android:layout_height="24dp"/>
        <LinearLayout
            android:gravity="top"
            android:padding="16dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/button_mobile_1"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/ic_button_gradient"
                android:text="관리자 로그인"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="56dp"/>
            <View
                android:layout_width="16dp"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/button_mobile_2"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/ic_button_gradient"
                android:text="처리자 로그인"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="56dp"/>
            <View
                android:layout_width="16dp"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/button_mobile_3"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/ic_button_gradient"
                android:text="선생님 로그인"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="56dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:background="#ffffff"
        android:textSize="21dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:id="@+id/button_call"
        android:gravity="center"
        android:text="☎ 02-583-4598"
        android:elevation="8dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>
</RelativeLayout>